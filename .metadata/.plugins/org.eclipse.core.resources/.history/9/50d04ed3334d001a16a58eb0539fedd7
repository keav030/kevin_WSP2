package ex20_shapes;

public class Triangle extends Shape {
	private int base;
	private int height;
	private int l1;
	private int l2;
	
	public Triangle(String unit, int base, int height, int l1, int l2) {
		super(unit);
		this.base = base;
		this.height = height;
		this.l1=l1;
		this.l2=l2;
	}
	
	public double getArea() {
		return (base*height)/2;
	}
	
	public double getParameter() {
		return base+l1+l2;	
	}
	
	public int getBase() {
		return base;
	}
	public void setBase(int base) {
		this.base = base;
	}
	public int getHeight() {
		return height;
	}
	public void setHeight(int height) {
		this.height = height;
	}
	
	
}
