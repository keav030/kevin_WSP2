package ex07_romannumerals;

public class RomanNumeral {
	private int value;
	
	public RomanNumeral(int value) {
		
	}
	
	public int[] Dcomp(int value) {
		int number = this.value;
		int numberAux=number;
		int i=0; int e=0;
		//========
		while(numberAux>10) {
			numberAux=numberAux/10;
			e++;
		}
		//===========
		
		int[] values = new int[e+1]; 
		i=e;
		while(number>0) {
			values[i]=number%10;
			number=number/10;
			i--;
		}
		
		for(i=0;i<values.length;i++) {
			System.out.println("list "+"["+i+"]"+values[i]);
		}
		return values;
	}
	//==================
	public void Print() {
		String roman;
		int number = this.value;
		int numberAux=number;
		int i=0; int e=0;
		//========
		while(numberAux>10) {
			numberAux=numberAux/10;
			e++;
		}
		//===========
		
		int[] values = new int[e+1]; 
		i=e;
		while(number>0) {
			values[i]=number%10;
			number=number/10;
			i--;
		}
		
		for(i=0;i<values.length;i++) {
			System.out.println("list "+"["+i+"]"+values[i]);
		}
		
		
	}
	
	////////////////////////
	public static void main(String[] args) {
		RomanNumeral test = new RomanNumeral(1538);
		
		test.Print();
	}
}
