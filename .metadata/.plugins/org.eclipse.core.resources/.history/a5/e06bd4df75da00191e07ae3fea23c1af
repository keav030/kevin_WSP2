package ex07_romannumerals;

public class RomanNumeral {
	private int value;
	
	public RomanNumeral(int value) {
		this.value = value;
	}
	
	//==================
	public void Print() {
		String roman = "";
		//[[==============================]]
		int number = this.value;
		int numberAux=number;
		int i=0; int e=0;
		//========
		while(numberAux>10) {
			numberAux=numberAux/10;
			e++;
		}
		//===========
		int[] values = new int[e+1]; 
		i=e;
		while(number>0) {
			values[i]=number%10;
			number=number/10;
			i--;
		}
		
		for(i=0;i<values.length;i++) {
			System.out.println("list "+"["+i+"]"+values[i]);
		}
		//[[==============================]]
		
		
		//================
		if(values.length == 4) {
			if(values[0]>0 && values[0]<4) {
				for(i=0;i<values[0];i++) {
					roman = roman+"M";
				}				
			}
			if(values[1]>0 && values[1]<4) {
				roman = roman + hundred(values[1]);
			}
		}
		String pru = " k";
		pru = "hola"+pru;
		
		
		System.out.println("test: "+ pru);
	}
	//=====================
	public String hundred(int num) {
		String romanC = "";
		for(int i=0;i<num;i++) {
			romanC = romanC+"C";
		}
		return romanC;
	//=====================
	}
	////////////////////////
	public static void main(String[] args) {
		RomanNumeral test = new RomanNumeral(2338);
		
		test.Print();
	}
}
